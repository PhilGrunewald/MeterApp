<?xml version='1.0' encoding='utf-8'?>
<widget id="org.energy_use.meter" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Activities</name>
    <description>
		An activity recorder
    </description>
    <author email="philipp.grunewald@ouce.ox.ac.uk" href="http://www.energy-use.org">
        Phil Grunewald
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-navigation href="https://ajax.googleapis.com/ajax/libs/*" />
    <allow-intent href="http://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://energy-use.org" />
    <allow-navigation href="http://energy-use.org/*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/recent.png" />
        <icon density="ldpi" src="www/img/meter_go.png" />
        <icon density="mdpi" src="www/img/meter_go.png" />
        <icon density="hdpi" src="www/img/meter_go.png" />
        <icon density="xhdpi" src="www/img/meter_go.png" />
        <icon density="xxhdpi" src="www/img/meter_go.png" />
        <icon density="xxxhdpi" src="www/img/meter_go.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/img/ios/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/img/ios/icon-60.png" width="60" height="60" />
        <icon src="www/img/ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/img/ios/icon-76.png" width="76" height="76" />
        <icon src="www/img/ios/icon-76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="www/img/ios/icon-40.png" width="40" height="40" />
        <icon src="www/img/ios/icon-40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="www/img/ios/icon-57.png" width="57" height="57" />
        <icon src="www/img/ios/icon-57@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/img/ios/icon-72.png" width="72" height="72" />
        <icon src="www/img/ios/icon-72@2x.png" width="144" height="144" />
        <!-- iPad Pro 
            <icon src="www/img/ios/icon-167.png" width="167" height="167" />
        -->
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/img/ios/icon-small.png" width="29" height="29" />
        <icon src="www/img/ios/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/img/ios/icon-50.png" width="50" height="50" />
        <icon src="www/img/ios/icon-50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="www/img/ios/icon-83.5@2x.png" width="167" height="167" />
    </platform>
    <preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
</widget>
